<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/realizes/EditREalize/<%= realizeId %>" method="POST">
      <div class="form-group">
        <label for="">Kto Wykonuje</label>
        <input type="number" class="form-control" id="who_do" name="who_do" value="<%= realizeData.realize_user_id %>">
      </div>
      <div class="form-group">
        <label for="">Szczegóły/opis zadania</label>
        <input type="number" class="form-control" id="machine" name="machine" value="<%= realizeData.realize_machine_id %>">
      </div>
      <div class="form-group">
        <label for="">Data dodania</label>
        <input type="number" class="form-control" id="task" name="task" value="<%= realizeData.realize_task_id %>">
      </div>
      
      <button type="submit" class="btn btn-warning">Edytuj zadanie</button>
    </form>
  </div>

</body>