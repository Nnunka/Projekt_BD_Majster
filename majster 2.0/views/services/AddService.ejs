<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/services/AddService" method="POST">
      <div class="form-group">
        <label for="">Podaj nazwę</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Nazwa" required>
      </div>
      <div class="form-group">
        <label for="">Podaj która maszyna</label>
        <input type="number" class="form-control" id="machine" name="machine" placeholder="Maszyna" required>
      </div>
      <div class="form-group">
        <label for="">Podaj opis</label>
        <input type="text" class="form-control" id="details" name="details" placeholder="Opis serwisacji" required>
      </div>
      <div class="form-group">
        <label for="">Data rozpoczęcia</label>
        <input type="date" class="form-control" id="start_date" name="start_date" placeholder="Data rozpoczęcia" required>
      </div>
      <div class="form-group">
        <label for="">Data zakończenia</label>
        <input type="date" class="form-control" id="end_date" name="end_date" placeholder="Data zakończenia" required>
      </div>
      
      <button type="submit" class="btn btn-warning">Dodaj zlecenie serwisowania</button>
    </form>
  </div>

</body>
