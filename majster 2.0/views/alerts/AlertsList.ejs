<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>
  <div class="ml-3 mt-3 mb-3">
    <button class="btn btn-warning"><a href="/alerts/AddAlert" class="text-decoration-none text-dark">Dodaj nowe zagłoszenie</a></button>
  </div>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nazwa</th>
        <th scope="col">Kto zgłosił</th>
        <th scope="col">Opis</th>
        <th scope="col">Data dodania</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% alerts.forEach(function(alert) { %>
        <tr>
          <td><%= alert.title %></td>
          <td><%= alert.who_add_id %></td>
          <td><%= alert.details %></td>
          <td><%= alert.add_date %></td>
          <td>
            <button class="btn btn-warning"><a href="/alerts/EditAlert/<%= alert.id %>" class="text-decoration-none text-dark">Edytuj</a></button>
          </td>
          <td>
            <button class="btn btn-danger"><a href="/alerts/DeleteAlert/<%= alert.id %>" class="text-decoration-none text-dark">Usuń</a></button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>