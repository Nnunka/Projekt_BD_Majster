<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/machines/AddMachine" method="POST">
      <div class="form-group">
        <label for="">Podaj nazwe maszyny</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Nazwa maszyny" required>
      </div>
      <div class="form-group">
        <label for="">Podaj rodzaj maszyny</label>
        <input type="text" class="form-control" id="type" name="type" placeholder="Rodzaj maszyny" required>
      </div>
      <div class="form-group">
        <label for="">Podaj status maszyny</label>
        <select class="form-control" id="status" name="status" >
          <option value="Sprawna">Sprawna</option>
          <option value="W urzyciu">W urzyciu</option>
          <option value="Serwis">Serwis</option>
          </select>
      </div>
      <button type="submit" class="btn btn-warning">Dodaj maszynÄ™</button>
    </form>
  </div>

</body>
