<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/machines/ServiceMachine/<%= serviceId %>" method="POST">
      <div class="form-group">
        <label for="">Nazwa serwisu</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Nazwa serwisu" required>
      </div>
      <div class="form-group">
        <label for="">Szczegóły/opis serwisu</label>
        <input type="text" class="form-control" id="details" name="details" placeholder="Szczegóły/opis serwisu" required>
      </div>
      <button type="submit" class="btn btn-warning">Dodaj zlecenie serwisowania</button>
    </form>
  </div>

</body>