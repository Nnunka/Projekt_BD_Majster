<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/machines/ServiceMachine/<%= serviceId %>" method="POST">
      <div class="form-group">
        <label for="">Nazwa</label>
        <input type="text" class="form-control" id="title" name="title">
      </div>
      <div class="form-group">
        <input type="hidden" class="form-control" id="machine" name="machine" value="<%= serviceData.machine_id %>">
      </div>
      <div class="form-group">
        <label for="">Szczegóły/opis zadania</label>
        <input type="text" class="form-control" id="details" name="details">
      </div>
      <div class="form-group">
        <label for="">Data rozpoczęcia</label>
        <input type="date" class="form-control" id="start_date" name="start_date">
      </div>
      <div class="form-group">
        <label for="">Data zakończenia</label>
        <input type="date" class="form-control" id="end_date" name="end_date">
      </div>
      <button type="submit" class="btn btn-warning">Dodaj zlecenie serwisowania</button>
    </form>
  </div>

</body>