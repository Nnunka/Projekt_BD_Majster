<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <ul>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
   <% })  %> <% } %>
  </ul>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/machines/EditMachine/<%= machineId %>" method="POST">
      <div class="form-group">
        <label for="">Nazwa</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= machineData.machine_name %>" required>
      </div>
      <div class="form-group">
        <label for="">Rodzaj</label>
        <input type="text" class="form-control" id="type" name="type" value="<%= machineData.machine_type %>" required>
      </div>
      <div class="form-group">
        <label for="">Status</label>
        <select class="form-control" id="status" name="status" required>
          <option value="Sprawna">Sprawna</option>
          <option value="W urzyciu">W u≈ºyciu</option>
          <option value="Serwis">Serwis</option>
          </select>
      </div>
      <button type="submit" class="btn btn-warning">Edytuj maszyne</button>
    </form>
  </div>

</body>