<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <div class="ml-3 mt-3 mb-3"><ul><b>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
    <% })  %> <% } %>
  </b></ul></div>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/users/EditUser/<%= userId %>" method="POST">
      <div class="form-group">
        <label for="">Imię</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= userData.user_name %>" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Nazwisko</label>
        <input type="text" class="form-control" id="surname" name="surname" value="<%= userData.user_surname %>" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= userData.user_email %>" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Login</label>
        <input type="text" class="form-control" id="login" name="login" value="<%= userData.user_login %>" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Hasło</label>
        <input type="text" class="form-control" id="password" name="password" value="<%= userData.user_password %>" minlength="4" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Rola</label>
        <select multiple class="form-control" id="role" name="role" required>
          <option value="admin" <%= userData.user_role === 'admin' ? 'selected' : '' %>>Admin</option>
          <option value="user" <%= userData.user_role === 'user' ? 'selected' : '' %>>Pracownik</option>
          <option value="repairer" <%= userData.user_role === 'repairer' ? 'selected' : '' %>>Serwisant</option>
        </select>
      </div>
      
      <button type="submit" class="btn btn-warning">Edytuj użytkownik</button>
    </form>
  </div>

</body>