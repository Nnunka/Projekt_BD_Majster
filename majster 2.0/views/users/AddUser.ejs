<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>


  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/users/AddUser" method="POST">
      <div class="form-group">
        <label for="">Podaj imię pracownika</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Imię pracownika" required>
      </div>
      <div class="form-group">
        <label for="">Podaj nazwisko pracownika</label>
        <input type="text" class="form-control" id="surname" name="surname" placeholder="Nazwisko pracownika" required>
      </div>
      <div class="form-group">
        <label for="">Podaj email pracownika</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email pracownika" required>
      </div>
      <div class="form-group">
        <label for="">Podaj login pracownika</label>
        <input type="text" class="form-control" id="login" name="login" placeholder="Login pracownika" required>
      </div>
      <div class="form-group">
        <label for="">Podaj hasło pracownika</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Hasło pracownika" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect2">Podaj rolę pracownika</label>
        <select multiple class="form-control" id="role" name="role">
          <option value="admin">Admin</option>
          <option value="user">Użytkownik</option>
          <option value="repairer">Serwisant</option>
        </select>
      </div>

      <button type="submit" class="btn btn-warning">Dodaj użytkownika</button>

    </form>

    <table class="admin-panel__table">
      <thead>
        <tr class="table__row">
          <th>ID</th>
          <th>Nazwa użytkownika</th>
          <th>Data email</th>
          
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr class="table__row">
              <td><%= index = index + 1 %></td>
              <td><%= user.name %> <%= user.surname %></td>
              <td><%= user.email %></td>
              
            </tr>  
        </tr>
        <% }); %>
      </tbody>
    </table>



  </div>
    <ul>
      <% if(typeof errors != 'undefined') { %> 
        <% errors.forEach(error=>{%>
          <li><%= error.message %></li>
        
          
     <% })  %> <% } %>
    </ul>

</body>
