<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>

  <div class="ml-3 mt-3 mb-3"><ul><b>
    <% if(typeof errors != 'undefined') { %> 
      <% errors.forEach(error=>{%>
        <li><%= error.message %></li> 
    <% })  %> <% } %>
  </b></ul></div>

  <div class="vh-100 d-flex justify-content-left align-items-top mt-4 ml-4">
    <form action="/users/AddUser" method="POST">
      <div class="form-group">
        <label for="">Podaj imię pracownika</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Imię pracownika" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Podaj nazwisko pracownika</label>
        <input type="text" class="form-control" id="surname" name="surname" placeholder="Nazwisko pracownika" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Podaj email pracownika</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email pracownika" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Podaj login pracownika</label>
        <input type="text" class="form-control" id="login" name="login" placeholder="Login pracownika" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="">Podaj hasło pracownika</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Hasło pracownika" minlength="3" maxlength="20" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect2">Podaj rolę pracownika</label>
        <select class="form-control" id="role" name="role" required>
          <option value="admin">Admin</option>
          <option value="user">Pracownik</option>
          <option value="repairer">Serwisant</option>
        </select>
      </div>
      <button type="submit" class="btn btn-warning">Dodaj użytkownika</button>
    </form>
  </div>

</body>
