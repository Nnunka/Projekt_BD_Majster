<%- include('../components/Head')%>

<body>

  <header>
    <%- include('../components/Navbar')%>
  </header>
  
  <div class="ml-3 mt-3 mb-3">
    <button class="btn btn-warning"><a href="/users/AddUser" class="text-decoration-none text-dark">Dodaj nowego użytkownika</a></button>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Imię</th>
        <th scope="col">Nazwisko</th>
        <th scope="col">Email</th>
        <th scope="col">Login</th>
        <th scope="col">Rola</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.email %></td>
          <td><%= user.login %></td>
          <td><%= user.role %></td>
          <td>
            <button class="btn btn-warning"><a href="/users/EditUser/<%= user.id %>" class="text-decoration-none text-dark">Edytuj</a></button>
          </td>
          <td>
            <button class="btn btn-danger"><a href="/users/DeleteUser/<%= user.id %>" class="text-decoration-none text-dark">Usuń</a></button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>


